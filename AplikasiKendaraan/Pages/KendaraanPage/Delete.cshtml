@page
@model AplikasiKendaraan.Pages.KendaraanPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h3>Anda Yakin Menghapus Data "@Html.DisplayFor(model => model.KendaraanModel.no_register)" ?</h3>
    <hr />
    <table class="table table-borderless" style="text-align:left;">
        <tr>
            <th class="col-lg-3 col-md-5 col-sm-6 col-6">No Register</th>
            <td class="col-lg-9 col-md-7 col-sm-6 col-6">
                @Html.DisplayFor(model => model.KendaraanModel.no_register)
            </td>
        </tr>
        <tr>
            <th>Nama Pemilik</th>
            <td>
                @Html.DisplayFor(model => model.KendaraanModel.nama)
            </td>
        </tr>
        <tr>
            <th>Alamat Pemilik Kendaraan</th>
            <td>
                @Html.DisplayFor(model => model.KendaraanModel.alamat)
            </td>
        </tr>
        <tr>
            <th>Merk Kendaraan</th>
            <td>
                @Html.DisplayFor(model => model.KendaraanModel.merk)
            </td>
        </tr>
        <tr>
            <th>Tahun Pembuatan</th>
            <td>
                @Html.DisplayFor(model => model.KendaraanModel.tahun)
            </td>
        </tr>
        <tr>
            <th>Kapasitas Silinder</th>
            <td>
                @Html.DisplayFor(model => model.KendaraanModel.silinder)
            </td>
        </tr>
        <tr>
            <th>Warna Kendaraan</th>
            <td>
                @Html.DisplayFor(model => model.KendaraanModel.warna)
            </td>
        </tr>
        <tr>
            <th>Bahan Bakar Kendaraan</th>
            <td>
                @Html.DisplayFor(model => model.KendaraanModel.bahanBakar)
            </td>
        </tr>
    </table>

    <form method="post">
        <input type="hidden" asp-for="KendaraanModel.no_register" />
        <input type="submit" value="Delete" class="btn btn-danger tombol" />
        <a asp-page="./Index" class="btn btn-dark tombol">Back to List</a>
    </form>

</div>
